package internetcafe.product;

import java.util.*;
/*
* 클래스명 : Member // (회원가입한 손님 ) = 멤버에 대한 클래스
* 
* 버전 정보 v.1.0
* 
* 마지막 업데이트 날짜 : 2020 - 03 - 26
* 
* 작업자 : 박민혜
*/
public class Member extends Customer {

	public Member() {

	}

	private String name;  //회원가입할때 이름 입력받으려고 

	
	
	
	public String getName() {
		return name;
	}

	
	
	
	
	
	public void setName(String name) {
		String regExp = "^[ㄱ-ㅎ가-힣]*$";
		boolean bName = name.matches(regExp);
		
		while (true) {
			if (bName == true) {
				System.out.println(this.name = name);
				break;
			} else {
				System.out.println("올바른 이름 형식이 아닙니다.");
				break;
			}
		}
	}
	
	
	
	
	

	@Override
	public String toString() {
		return "Member [name=" + name + "]";
	}

}
